{{! Mostramos todos los productos que recibimos }}
<h1 style="text-align: center; text-decoration: underline; margin-top:15px;">Todos los productos</h1>
<div class="d-flex p-5">
  {{#each products}}
    <div class="card m-1" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.description}}</p>
        <p class="card-text">$ {{this.price}}-.</p>
        {{!-- <a href="/productos/{{this.id}}" class="btn btn-primary">Ver m√°s</a> --}}
      </div>
    </div>
  {{/each}}

</div>